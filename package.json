{
  "name": "blog-site",
  "version": "0.1.0",
  "private": true,
  "config": {
    "siteUrl": "https://blog.alexellis.io"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build && npm run build:rss-copy",
    "build:rss-copy": "rm -rf out/rss-dir && mkdir -p out/rss-dir && cp out/rss out/rss-dir/index.xml && rm out/rss && mv out/rss-dir out/rss",
    "start": "next start",
    "lint": "next lint",
    "deploy": "npm run build && npx gh-pages -d out --dotfiles",
    "deploy:fast": "./hack/deploy.sh"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@types/hast": "^3.0.4",
    "autoprefixer": "^10.4.21",
    "gray-matter": "^4.0.3",
    "hast-util-sanitize": "^5.0.2",
    "next": "15.4.6",
    "postcss": "^8.5.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-prism-plus": "^2.0.1",
    "rehype-sanitize": "^6.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "server-only": "^0.0.1",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "gh-pages": "^6.3.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  }
}
